<apex:page showHeader="false" sidebar="true" Controller="NewLeadClass" >
    <apex:sectionHeader title="Internal lead Referral form Page"  />
      <apex:Form >
          <apex:pageBlock tabStyle="Lead">
              
              <apex:pageBlockButtons >
                  <apex:commandButton value="Submit" action="{!save1}"/>
                  <apex:commandbutton value="Cancel" action="{!cancel1}"/>
                  <apex:commandbutton value="Back" action="{!back1}"/>
              </apex:pageBlockButtons>
              
              <apex:pageBlockSection columns="1" >
                  
                              <apex:inputField value="{!ld.FirstName}"/> 
                              <apex:inputField value="{!ld.LastName}"/> 
                              <apex:inputField value="{!ld.Company}"/> 
                              <apex:inputfield value="{!ld.NumberOfEmployees}"/>
                              <apex:inputField value="{!ld.Industry}"/> 
                              <apex:inputField value="{!ld.Email}"/> 
                              <apex:inputField value="{!ld.LeadSource}"/> 
                              <apex:inputField value="{!ld.Status}"/> 
                              <apex:inputField value="{!ld.Product__c}" /> 
                              <apex:inputField value="{!ld.City}"/> 
                              <apex:inputField value="{!ld.State}" /> 
                              <apex:inputField value="{!ld.Street}" /> 
                              <apex:inputField value="{!ld.Country}"/> 
                              <apex:inputField value="{!ld.PostalCode}" /> 
                              <apex:inputField value="{!ld.Custom_Routing__c}"/>
                              
                  
              </apex:pageBlockSection>
          </apex:pageBlock>
    </apex:Form>
</apex:page>